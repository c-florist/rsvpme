---
import { HomeIcon } from "~/client/components/icons";
import AppLayout from "~/client/layouts/AppLayout.astro";
---

<AppLayout title="Page Not Found">
  <div class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold text-neutral mb-4">Oops!</h1>
        <h2 class="text-2xl font-semibold text-neutral mb-4">We can't find that page</h2>
        <p class="text-lg text-base-content/80 mb-6">
          The link you followed might be broken, or the page may have been moved.
        </p>
          <a href="/" class="btn btn-primary btn-lg">
            <HomeIcon className="mr-2" />
            Return home
          </a>
      </div>
    </div>
  </div>
</AppLayout>
