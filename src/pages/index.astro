---
import { BrandIcon, CheckIcon, PlusIcon } from "~/client/components/icons";
import AppLayout from "~/client/layouts/AppLayout.astro";
---
<AppLayout title="Welcome">
  <div class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <div class="flex items-center justify-center gap-3 mb-4">
          <BrandIcon size="w-12 h-12" className="text-neutral" />
          <h1 class="text-5xl font-bold text-neutral">rsvpme</h1>
        </div>
        <p class="text-lg text-base-content/80 mb-6">
          Create events and collect RSVPs with zero friction.
        </p>
        <div class="space-y-4">
          <div class="flex flex-col gap-2 text-base-content/70">
            <div class="flex items-center gap-2">
              <CheckIcon className="text-success" />
              <span>No passwords required</span>
            </div>
            <div class="flex items-center gap-2">
              <CheckIcon className="text-success" />
              <span>No account creation needed</span>
            </div>
            <div class="flex items-center gap-2">
              <CheckIcon className="text-success" />
              <span>Secure unique links for editing</span>
            </div>
          </div>
          <div class="divider"></div>
          <p class="text-sm text-base-content/60">
            Create an event instantly and get a unique link to share with your guests.
            Keep your edit link safe to manage your event later.
          </p>
          <a href="/create" class="btn btn-primary btn-lg mt-4">
            <PlusIcon />
            Create an event
            <PlusIcon className="ml-2" />
          </a>
        </div>
      </div>
    </div>
  </div>
</AppLayout>
