---
import AppLayout from "~/client/layouts/AppLayout.astro";
---

<AppLayout title="Welcome">
  <div class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold text-neutral mb-4">rsvpme</h1>
        <p class="text-lg text-base-content/80 mb-6">
          Create events and collect RSVPs with zero friction.
        </p>
        <div class="space-y-4">
          <div class="flex flex-col gap-2 text-base-content/70">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>No passwords required</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>No account creation needed</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Secure unique links for editing</span>
            </div>
          </div>
          <div class="divider"></div>
          <p class="text-sm text-base-content/60">
            Create an event instantly and get a unique link to share with your guests. 
            Keep your edit link safe to manage your event later.
          </p>
          <a href="/create" class="btn btn-primary btn-lg mt-6">
            Create Your First Event
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Feature cards section -->
  <div class="bg-base-200 py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-base-content">How it works</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6 rounded-lg border border-base-300 bg-base-100 hover:bg-white transition-colors">
          <div class="w-16 h-16 mx-auto mb-4 bg-base-300/30 rounded-full flex items-center justify-center">
            <div class="text-2xl">🎉</div>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-neutral">Create Event</h3>
          <p class="text-base-content/70 leading-relaxed">
            Set up your event with all the details. No registration required – just start creating!
          </p>
        </div>
        
        <div class="text-center p-6 rounded-lg border border-base-300 bg-base-100 hover:bg-white transition-colors">
          <div class="w-16 h-16 mx-auto mb-4 bg-base-300/30 rounded-full flex items-center justify-center">
            <div class="text-2xl">📤</div>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-neutral">Share Link</h3>
          <p class="text-base-content/70 leading-relaxed">
            Get a unique link to share with your guests. They can RSVP instantly without any hassle.
          </p>
        </div>
        
        <div class="text-center p-6 rounded-lg border border-base-300 bg-base-100 hover:bg-white transition-colors">
          <div class="w-16 h-16 mx-auto mb-4 bg-base-300/30 rounded-full flex items-center justify-center">
            <div class="text-2xl">✏️</div>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-neutral">Manage Easily</h3>
          <p class="text-base-content/70 leading-relaxed">
            Use your secure edit link to update details and track RSVPs whenever you need.
          </p>
        </div>
      </div>
    </div>
  </div>
</AppLayout>
