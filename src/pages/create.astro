---
import AppLayout from "~/client/layouts/AppLayout.astro";
import CreateEventForm from "~/client/views/CreateEventForm";
---

<AppLayout title="Create Event">
  <div class="@container container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-neutral mb-4">Create Event</h1>
      <p class="text-sm mb-4 text-base-content/60">
        Create an event instantly and get a unique link to share with your guests.
      </p>
      <CreateEventForm client:load id="create-event-form" />
    </div>
  </div>
</AppLayout>
