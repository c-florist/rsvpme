---
import { ArrowLeftIcon } from "~/client/components/icons";
import AppLayout from "~/client/layouts/AppLayout.astro";
---

<AppLayout title="Create Event">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto text-center">
      <h1 class="text-4xl font-bold text-neutral mb-4">Create Event</h1>
      <p class="text-base-content/70 mb-8">
        This page is coming soon! Here you'll be able to create your events.
      </p>

      <div class="space-y-4">
        <a href="/" class="btn btn-outline">
          <ArrowLeftIcon class="mr-2" />
          Return home
        </a>
      </div>
    </div>
  </div>
</AppLayout>
